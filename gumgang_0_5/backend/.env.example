# ============================================================================
# 금강 2.0 Backend Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# 이 파일을 .env로 복사한 후 실제 값을 입력하세요

# ============================================================================
# AI Service API Keys
# ============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-3.5-turbo  # Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_STREAMING=false

# Anthropic Claude API (Optional)
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_API_KEY_HERE
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini API (Optional)
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE
GEMINI_MODEL=gemini-pro

# Hugging Face API (Optional)
HUGGINGFACE_API_KEY=hf_YOUR_HUGGINGFACE_API_KEY_HERE

# ============================================================================
# Database Configuration
# ============================================================================

# ChromaDB Settings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=gumgang_memories

# PostgreSQL (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/gumgang_db

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# Server Configuration
# ============================================================================

# FastAPI Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true
SERVER_WORKERS=1
LOG_LEVEL=info

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002"]
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Security
# ============================================================================

# Secret Keys
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# ============================================================================
# Memory System Configuration
# ============================================================================

# 5-Layer Memory System
MEMORY_ENABLED=true
MEMORY_LAYERS=5
MEMORY_MAX_SIZE_MB=1000
MEMORY_PERSISTENCE=true
MEMORY_AUTO_SAVE_INTERVAL=300  # seconds

# Memory Layer Settings
SENSORY_MEMORY_DURATION=30  # seconds
SHORT_TERM_MEMORY_SIZE=100
WORKING_MEMORY_SIZE=50
LONG_TERM_MEMORY_SIZE=10000
CORE_MEMORY_SIZE=1000

# ============================================================================
# Terminal Server Configuration
# ============================================================================

TERMINAL_SERVER_PORT=8002
TERMINAL_SECURE_MODE=true
TERMINAL_MAX_EXEC_TIME=30  # seconds
TERMINAL_ALLOWED_COMMANDS=ls,pwd,cd,cat,echo,grep,find
TERMINAL_BLOCKED_COMMANDS=rm,dd,mkfs,fork

# ============================================================================
# Feature Flags
# ============================================================================

# AI Features
ENABLE_AI_ASSISTANT=true
ENABLE_CODE_GENERATION=true
ENABLE_CODE_REVIEW=true
ENABLE_AUTO_COMPLETE=true
ENABLE_SEMANTIC_SEARCH=true

# Memory Features
ENABLE_MEMORY_SYSTEM=true
ENABLE_CONTEXT_AWARENESS=true
ENABLE_LEARNING=true
ENABLE_EVOLUTION=true

# System Features
ENABLE_WEBSOCKET=true
ENABLE_FILE_SYSTEM=true
ENABLE_GIT_INTEGRATION=false
ENABLE_DOCKER_INTEGRATION=false

# ============================================================================
# External Service Integrations
# ============================================================================

# GitHub
GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN_HERE
GITHUB_DEFAULT_REPO=username/repo

# GitLab
GITLAB_TOKEN=YOUR_GITLAB_TOKEN_HERE
GITLAB_URL=https://gitlab.com

# Slack (Optional)
SLACK_BOT_TOKEN=xoxb-YOUR_SLACK_BOT_TOKEN
SLACK_APP_TOKEN=xapp-YOUR_SLACK_APP_TOKEN

# Discord (Optional)
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN

# ============================================================================
# Monitoring and Analytics
# ============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Prometheus Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# ============================================================================
# Development Settings
# ============================================================================

DEBUG=true
TESTING=false
MOCK_AI_RESPONSES=false
DEVELOPMENT_MODE=true

# Logging
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/backend.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# Performance Tuning
# ============================================================================

# Request Limits
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=60  # seconds

# Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords and keys in production
# 3. Rotate API keys regularly
# 4. Monitor API usage to avoid rate limits and unexpected charges
# 5. Enable only the features you need to minimize attack surface
