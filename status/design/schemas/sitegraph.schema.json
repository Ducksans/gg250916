{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SiteGraph v1",
  "type": "object",
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "generated_at": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "title": { "type": "string" },
          "path": { "type": "string" },
          "meta": { "type": "object" },
          "scores": {
            "type": "object",
            "properties": {
              "centrality": { "type": "number" },
              "isolation": { "type": "number" },
              "recency": { "type": "number" },
              "evidence_count": { "type": "number" }
            }
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["src", "dst", "type"],
        "properties": {
          "src": { "type": "string" },
          "dst": { "type": "string" },
          "type": { "type": "string" },
          "weight": { "type": "number" },
          "meta": { "type": "object" }
        }
      }
    }
  },
  "required": ["schema_version", "nodes", "edges"]
}

